<div class="container">
  <div class="d-flex justify-content-between align-items-center p-3">
    <h1>Your lists</h1>
    <%= link_to 'New list', new_list_path, class: 'btn btn-outline-dark btn-sm' %>
  </div>
  <div class="d-flex flex-wrap m-3 gap-3">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card p-5">
          <h4><%= list.name %></h4>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
