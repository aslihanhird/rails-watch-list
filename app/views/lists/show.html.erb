<div class="container">
  <div class="d-flex justify-content-between align-items-center p-3">
    <h1><%= @list.name %></h1>
  </div>
  <%# <div class="d-flex"> %>
  <div class="row row-cols-2 p-3">
    <h2>Your movies</h2>
    <div class="col-8">
      <div class="d-flex flex-wrap gap-3">
        <% @bookmarks.each do |bookmark| %>
          <div class="card rounded-3 shadow" style="width: 400px;">
            <div class="row g-0">
              <div class="col-md-4">
                <%= image_tag bookmark.movie.poster_url, alt: "Le Wagon", class: "img-fluid rounded-start" %>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <div class="card-title d-flex flex-wrap">
                    <h5><%= bookmark.movie.title %>&nbsp<small class="fw-light text-muted"><%= bookmark.movie.rating %>  <span class="fs-6 text-warning"><i class="fa-solid fa-star"></i></span></small>
                  </div>
                  <p class="card-text lh-sm text-secondary"><%= bookmark.movie.overview %></p>
                </div>
              </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <small class="text-muted fw-light"><i class="fa-solid fa-quote-left"></i>  <%= bookmark.comment %></small>
              <small><%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this movie?' }, class: 'text-danger text-decoration-none' %></small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <h3>Add a movie</h3>
      <%= render 'bookmarks/form', bookmark: @bookmark %>
    </div>
  </div>
</div>
